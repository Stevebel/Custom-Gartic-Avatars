{
  "manifest_version": 3,
  "name": "Gartic Phonebook",
  "version": "0.1.0",
  "description": "Lets you replace Gartic Phone's default avatars with custom images",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.bundle.js"
  },
  "permissions": ["storage", "unlimitedStorage", "activeTab", "scripting"]
}
